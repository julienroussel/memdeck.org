{
  "name": "memdeck.org",
  "private": true,
  "version": "0.0.1",
  "description": "Memorized Deck Tools",
  "type": "module",
  "homepage": "https://github.com/julienroussel/memdeck.org#readme",
  "bugs": {
    "url": "https://github.com/julienroussel/memdeck.org/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julienroussel/memdeck.org.git"
  },
  "author": "Julien Roussel",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=25",
    "pnpm": ">=10"
  },
  "scripts": {
    "knip": "knip",
    "lint": "ultracite check",
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc -b",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "fta": "fta src",
    "lighthouse": "lhci autorun",
    "validate": "pnpm run knip && pnpm run lint && pnpm run typecheck && pnpm run fta",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.58.2",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "fta-cli": "3.0.0",
    "globals": "17.3.0",
    "happy-dom": "20.6.1",
    "husky": "9.1.7",
    "knip": "5.83.1",
    "lefthook": "2.1.1",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "postcss-preset-mantine": "1.18.0",
    "postcss-simple-vars": "7.0.1",
    "typescript": "5.9.3",
    "ultracite": "7.2.2",
    "vite": "7.3.1",
    "vite-plugin-pwa": "1.2.0",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "@mantine/core": "8.3.15",
    "@mantine/hooks": "8.3.15",
    "@mantine/notifications": "8.3.15",
    "@tabler/icons-react": "3.36.1",
    "i18next": "25.8.9",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-error-boundary": "6.1.1",
    "react-ga4": "2.1.0",
    "react-i18next": "16.5.4",
    "react-router": "7.13.0",
    "web-vitals": "5.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  }
}
