{
  "name": "memdeck.org",
  "private": true,
  "version": "0.0.1",
  "description": "Memorized Deck Tools",
  "type": "module",
  "homepage": "https://github.com/julienroussel/memdeck.org#readme",
  "bugs": {
    "url": "https://github.com/julienroussel/memdeck.org/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julienroussel/memdeck.org.git"
  },
  "author": "Julien Roussel",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=25",
    "pnpm": ">=10"
  },
  "scripts": {
    "knip": "knip",
    "lint": "ultracite check",
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc -b",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "fta": "fta src",
    "validate": "pnpm run knip && pnpm run lint && pnpm run typecheck && pnpm run fta",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@playwright/test": "1.57.0",
    "@types/node": "25.0.6",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "fta-cli": "3.0.0",
    "globals": "17.0.0",
    "husky": "9.1.7",
    "knip": "5.80.2",
    "lefthook": "2.0.14",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "postcss-preset-mantine": "1.18.0",
    "postcss-simple-vars": "7.0.1",
    "typescript": "5.9.3",
    "ultracite": "7.0.11",
    "vite": "7.3.1",
    "vitest": "4.0.16"
  },
  "dependencies": {
    "@mantine/core": "8.3.12",
    "@mantine/hooks": "8.3.12",
    "@mantine/notifications": "8.3.12",
    "@tabler/icons-react": "3.36.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-error-boundary": "6.0.3",
    "react-ga4": "2.1.0",
    "react-router": "7.12.0",
    "web-vitals": "5.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  }
}
